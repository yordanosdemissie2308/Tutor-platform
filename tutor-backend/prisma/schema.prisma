generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("STUDENT")
  
  // Relation fields to profile models
  familyProfile FamilyProfile?
  tutorProfile  TutorProfile?
  posts        Post[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model FamilyProfile {
  id           Int    @id @default(autoincrement())
  studentName  String
  studentGrade String
  userId       Int    @unique
  user         User   @relation(fields: [userId], references: [id])
}
model Post {
  id          Int      @id @default(autoincrement())
  content     String
  visibility  String   @default("public") // "public", "tutors-only", "students-only"
  // For SQLite we store tags as a comma-separated string
  tags        String?
  likes       Int      @default(0)
  shares      Int      @default(0)
  timestamp   DateTime @default(now())

  // Relation to the User who posted
  authorId    Int
  author      User     @relation(fields: [authorId], references: [id])
}

// Update your User model to include posts
model TutorProfile {
  id         Int     @id @default(autoincrement())
  bio        String?
  subjects   String?
  hourlyRate Float?
  rating     Float   @default(0.0)
  isApproved Boolean @default(false)
  userId     Int     @unique
  user       User    @relation(fields: [userId], references: [id])
}

